{

  "name": "Clean Architecture Dev Container",

  "dockerComposeFile": [
    "../docker-compose.yml",
    "../docker-compose.debug.yml"

  ],

  "service": "backend",                 

  "workspaceFolder": "/app",           

  "forwardPorts": [5000, 4200, 5432],  

  "settings": {

    "terminal.integrated.defaultProfile.linux": "bash"

  },

  "postCreateCommand": "",

  "extensions": [

    "ms-dotnettools.csharp",

    "angular.ng-template",

    "dbaeumer.vscode-eslint",

    "esbenp.prettier-vscode",

    "johnpapa.angular-essentials",

    "ms-azuretools.vscode-docker",

    "mohsen1.prettify-json",

    "postgresql.pgsql"

  ],

  "remoteUser": "root"

} 
