pipeline {
  agent any

  environment {
    DOTNET_ROOT = '/usr/share/dotnet'
    NODE_ENV = 'production'
  }



  stages {

    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/SebleGirma/dotnetandangular.git'
      }
    }

     stage('Restore .NET') {
            steps {
                dir('backend/src') {
                    sh 'dotnet restore'
                }
            }
        }

        stage('Build .NET') {
            steps {
                dir('backend/src') {
                    sh 'dotnet build --configuration Release'
                }
            }
        }

        stage('Publish .NET') {
            steps {
                dir('backend/src') {
                    sh 'dotnet publish --configuration Release -o publish'
                }
            }
        }

    stage('Deploy') {
      steps {
        sh '''
        echo "Deploying .NET to /var/www/Sebdotnet-api"
        sudo systemctl stop dotnet-api || true
        sudo cp -r backend/src/publish/* /var/www/Sebdotnet-api/
        sudo systemctl start dotnet-api
        '''
      }
    }
  }
}
 