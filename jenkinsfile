pipeline {
  agent any

  environment {
    DOTNET_ROOT = '/usr/share/dotnet'
    NODE_ENV = 'production'
  }

  stages {

    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/SebleGirma/dotnetandangular.git'
      }
    }
stages {
        stage('Restore .NET dependencies') {
            steps {
                dir('backend') {
                    sh 'dotnet restore'
                }
            }
        }

        stage('Build .NET backend') {
            steps {
                dir('backend') {
                    sh 'dotnet build --configuration Release'
                }
            }
        }

        // Optional: stage to run or publish
        stage('Publish .NET backend') {
            steps {
                dir('backend') {
                    sh 'dotnet publish --configuration Release -o publish'
                }
            }
        }
 
   stage('Build Angular Frontend') {
      steps {
        dir('frontend') {
          sh 'npm install'
          sh 'npm ci '
          sh 'npm ls @angular-devkit/build-angular'
          sh 'npm run build -- --configuration production'
        }
      }
    }
    stage('Deploy') {
      steps {
        sh '''
        echo "Deploying Angular to /var/www/angular-app"
        sudo rm -rf /var/www/angular-app/*
        sudo cp -r frontend/dist/* /var/www/angular-app/

        echo "Deploying .NET to /var/www/dotnet-api"
        sudo systemctl stop dotnet-api || true
        sudo cp -r backend/publish/* /var/www/dotnet-api/
        sudo systemctl start dotnet-api
        '''
      }
    }
  }
}
 